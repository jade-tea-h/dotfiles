[include]
  path = ~/.config/git/user

[init]
	defaultBranch = main
[pull]
  rebase = false

[alias]
  s = status
  d = diff
  a = add
  ap = add -p
  c = commit
  cm = commit -m
  ca = commit -a
  cam = commit -am

[core]
  pager = delta
[interactive]
  diffFilter = delta --color-only --features=interactive
[delta]
  navigate = true
  ; features = decorations
  side-by-side = true
  line-numbers = true
[delta "interactive"]
  keep-plus-minus-markers = false
[delta "decorations"]
  commit-decoration-style = blue ol
  commit-style = raw
  file-style = omit
  hunk-header-decoration-style = blue box
  hunk-header-file-style = red
  hunk-header-line-number-style = "#6e6a86"
  hunk-header-style = file line-number syntax

[merge]
  conflictstyle = diff3

[difftool]
  prompt = true
[diff]
  colorMoved = default
  tool = nvimdiff
[difftool]
  cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[merge]
  tool = nvimdiff
[mergetool "vimdiff"]
  path = nvim
