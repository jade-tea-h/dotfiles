#!/usr/bin/zsh

export XDG_CONFIG_HOME=$HOME/.config

setopt localoptions
setopt extendedglob
for env_file in $XDG_CONFIG_HOME/^zsh/env; do
  source $env_file
done

export ZDOTDIR=$XDG_CONFIG_HOME/zsh
export ZPLUGDIR=$XDG_DATA_HOME/zsh/plugins

typeset -U path
path=( . ~/.local/bin ~/.local/sbin $path )
typeset -U fpath
fpath=( $ZDOTDIR/funcs/**/ $ZPLUGDIR/zsh-completions/src $fpath )

export HOSTNAME=$HOST
