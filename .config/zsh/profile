#!/usr/bin/zsh

shell_profile=${XDG_CONFIG_HOME:-$HOME/.config}/shell/profile
[ -f $shell_profile ] && source $shell_profile

setopt localoptions
setopt extendedglob
for file in $XDG_CONFIG_HOME/^(zsh|shell)/env; do
  source $file
done

